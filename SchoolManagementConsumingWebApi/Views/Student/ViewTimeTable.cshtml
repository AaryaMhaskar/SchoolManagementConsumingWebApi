@model IEnumerable<SchoolManagementConsumingWebApi.Models.TimeTable>

@{
    ViewData["Title"] = "View Time Table";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Timetable ID</th>
            <th>Class ID</th>
            <th>File Path</th>
            <th>Class Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var timeTable in Model)
        {
            <tr>
                <td>@timeTable.TimetableId</td>
                <td>@timeTable.ClassId</td>
                <td>@timeTable.FilePath</td>
                <td>@timeTable.Class</td> <!-- Assuming Class has a Name property -->
            </tr>
        }
    </tbody>
</table>
